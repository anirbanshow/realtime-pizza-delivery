<section class="cart py-16">

    <% if(session.cart) { %>
        <div class="order container mx-auto w-1/2">

            <div class="flex items-center border-b border-gray-300 pb-4">
                <img src="/img/cart-black.png" alt="" />
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
            </div>

            <div class="pizza-list">

                <% for(let pizza of Object.values(session.cart.items) ) { %>

                    <div class="flex items-center my-8">
                        <img src="/img/<%= pizza.item.image %>" class="w-24" alt="" />
                        <div class="flex-1 ml-4">
                            <h1>
                                <%= pizza.item.name %>
                            </h1>
                            <span>
                                <%= pizza.item.size %>
                            </span>
                        </div>
                        <span class="flex-1">
                            <%= pizza.qty %> Pcs
                        </span>
                        <span class="font-bold text-lg">
                            $<%= parseInt(pizza.item.price) * pizza.qty %>
                        </span>
                    </div>

                    <% } %>

            </div>

            <hr>

            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2">$<%= session.cart.totalPrice %></span>
                </div>

                <% if(user){ %>
                    <div>
                        <form action="/orders" class="mt-12" method="POST">
                            <input type="text" class="border border-gray-400 p-2 w-1/2 mb-4" name="phone"
                                placeholder="Phone Number" name="number" />
                            <input type="text" class="border border-gray-400 p-2 w-1/2" name="address"
                                placeholder="Address" name="address" />
                            <div>
                                <button type="submit"
                                    class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">
                                    Order Now
                                </button>
                            </div>
                        </form>
                    </div>
                    <% }else{ %>
                        <a href=""
                            class="inline-block cursor-ponter btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">
                            Login to contine
                        </a>
                        <% } %>
            </div>

        </div>
        <% }else{ %>

            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
                    <p class="text-gray-500 text-lg mb-12">
                        You probably have not ordered a pizza yet. <br />
                        To order a pizza, go to the main page.
                    </p>

                    <img src="/img/empty-cart.png" class="w-2/5 mx-auto" alt="" />

                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">
                        Go Back
                    </a>
                </div>
            </div>
            <% } %>

</section>